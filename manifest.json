{
  "manifest_version": 3,
  "name": "Timellow",
  "description": "A Chrome extension that plays hourly chimes, background and ambient sounds, and includes a Pomodoro timer.",
  "version": "1.0",
  "default_locale": "ja",
  "permissions": ["storage", "alarms", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/*.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
